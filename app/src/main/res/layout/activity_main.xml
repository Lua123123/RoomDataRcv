<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_studentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edt"
        android:hint="Student Name"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:textColor="#272D2F"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_studentID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_edt"
        android:hint="Student ID"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:textColor="#272D2F" />

    <EditText
        android:id="@+id/edt_search_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_search"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:hint="Search..."
        android:padding="10dp"
        android:paddingStart="10dp"
        android:textColor="#272D2F" />

    <TextView
        android:id="@+id/txt_delete_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete all student"
        android:layout_gravity="end"
        android:textColor="#272D2F"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_addStudent"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_add"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:text="Student ID"
        android:textColor="#272D2F"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>